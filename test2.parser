input {
	stdin {
	}
}

filter {
	csv {
			source => "message"
			columns => [ "Time Stamp","Severity","Site Name","Server Name","Event Description"]
			separator => ","
		}

	kv {    source => "Server Name"
                        value_split => ":"}
		 mutate{remove_field => ["Server Name"]}
		 mutate{rename => {"Server" => "Server Name"}}

	kv {    source => "Site Name"
                        value_split => ":"}
		 mutate{remove_field => ["Site Name"]}
		 mutate{rename => {"Site" => "Site Name"}}
	
}

output {
	stdout {
		codec => rubydebug
	}
}
